<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2b2b2b">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2b2b2b"
        android:paddingStart="10dp"
        android:layout_marginVertical="15sp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/botaoVoltar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_back"
            android:contentDescription="Voltar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/botaoVoltar"
            android:layout_marginStart="16dp"
            android:text="Informações"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <!-- imagem -->
        <ImageView
            android:id="@+id/imageRight"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_person"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Botão Perfil -->
            <LinearLayout
                android:id="@+id/botaoPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="15dp">

                <ImageView
                    android:id="@+id/iconPerfil"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_perfil"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perfil"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Borda inferior -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#5c5c5c" />

            <!-- Botão Informações de Segurança -->
            <LinearLayout
                android:id="@+id/botaoSeguranca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="15dp">

                <ImageView
                    android:id="@+id/iconSeguranca"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_seguranca"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informações de Segurança"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Borda inferior -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#5c5c5c" />

            <!-- Botão Histórico de viagens -->
            <LinearLayout
                android:id="@+id/botaoHistorico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="15dp">

                <ImageView
                    android:id="@+id/iconHistorico"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_historico"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Histórico de viagens"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Borda inferior -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#5c5c5c" />
        </LinearLayout>
    </ScrollView>

    <!-- Menu inferior -->
    <include layout="@layout/menu"/>


</LinearLayout>